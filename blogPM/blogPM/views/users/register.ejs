<%- include('../partials/_header.ejs') %>
<%- include('../partials/_navbar.ejs') %>

<div class="row p-5 mt-5">
    <div class="col-md-4"></div>
    <div class="col-md-4 text-center">
        <div class="container">
            <h3 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register Form
            </h3>
        
            <form action="/users/register" method="POST">
                <div class="form-group">
                <input type="text" name="name" placeholder="Name" value="<%= typeof (name) != 'undefined' ? name : '' %>"  class="form-control" 
                    required />
                </div>
        
                <div class="form-group">
                <input type="email" placeholder="Email" name="email" value="<%= typeof (email) != 'undefined' ? email : '' %>"  class="form-control" 
                    required />
                </div>
        

                <div class="form-group">
                <input type="password" name="password" placeholder="Password" 
                    value="<%= typeof (password) != 'undefined' ? password : '' %>"  class="form-control"  required />
                </div>
        
                <div class="form-group">
                        <input type="password" name="confirmPassword" placeholder="Re-enter Password.."
                            value="<%= typeof (confirmPassword) != 'undefined' ? confirmPassword : '' %>"  class="form-control"  required />
                </div>
                
         
                <button class="btn btn-success btn-block" type="submit">Register</button>
        
            </form>
            <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
            <br>
     
        
        </div>

        <%- include('../partials/_messages.ejs') %>
    </div>
    <div class="col-md-3"></div>

</div>










